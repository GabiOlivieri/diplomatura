<div class="container" style="margin:100px auto">
    <div class="row">
        <div class="col-6 offset-3">
                <h4>Agregar una nueva publicación</h4>
            {{#if error}}
                <h5>{{message}}</h5>
            {{/if}}
            <form action="/publicaciones/agregar" method="POST">
                <div class="mb-3 row">
                    <input type="text" class="form-control" placeholder="Titulo" name="titulo">
                </div>
                <div class="mb-3 row">
                    <input type="text" class="form-control" placeholder="Descripción" name="descripcion">
                </div>

                <div class="mb-3 row">
                    <input type="text" class="form-control" placeholder="Link de youtube" name="iframe">
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
        </div>

    </div>

</div>